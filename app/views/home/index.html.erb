                                </div>
                                <% else %>
                                <div class="card-style-2 h-150px"
                                    style="background: url('/assets/sample11.jpg') no-repeat; background-position: center; background-size: cover;">
                                </div>
                                <% end %>
                                <div class="text-center mt-2">
                                <h3 class="text-style-2 black-2">
                                    <b><%= game.name %></b>
                                </h3>
                                </div>
                            </a>
                        </div>
                    <% end %>
                </div>
              </div>
            </div>
          </div>
