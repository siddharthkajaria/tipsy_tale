<%= form_with(model: [:admin, game]) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :name, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :name, required: true, autocomplete: "name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :game_desc, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :game_desc, autocomplete: "name", class: "form-control" %>
    </div>
  </div>

  <div class="row align-items-center">
    <div class="col-md">
      <%= form.label :image, class: 'form-label' %>
      <div class="col-auto"><span class="avatar avatar-xl admin-avatar" style="background-image: url(<%= form.object.image.url %>)"></span>
      </div>
      <%= form.file_field :image, class: 'form-control' %>
      <%= tag.div @admin.errors[:image].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-footer">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_games_path, class: "btn btn-white" %>
  </div>
<% end %>
